<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:id="@+id/ly_Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <RelativeLayout
                android:id="@+id/ly_UserKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_RequesterKey"
                    style="@style/TextViewMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right"
                    tools:text="QIaksdkajdwi2992jsksk" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_Accept"
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ly_UserKey"
                android:background="@drawable/baseline_favorite_border_black_48" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
