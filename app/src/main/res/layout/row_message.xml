<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ly_User1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_Name1"
            style="@style/TextViewSmall"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            tools:text="mynamealalalalalalalalallalalallalalalalal" />

        <TextView
            android:id="@+id/tv_Message1"
            style="@style/TextViewCahtMe"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_Name1"
            android:background="@drawable/rounded_rectangle_lime"
            android:gravity="left"
            tools:text="message\n서울은집이너무비싸요\n갑시다아프로\n프로그래머의여정 메세지고고작성" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_User2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_Message2"
            style="@style/TextViewCahtYou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_Name2"
            android:background="@drawable/rounded_rectangle_deep_puple"
            android:gravity="left"
            tools:text="message\n메세지입력을 길게해봅시다 길게길게\n???메세지입니다\n채팅" />

        <TextView
            android:id="@+id/tv_Name2"
            style="@style/TextViewSmall"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            tools:text="홍길동2" />
    </RelativeLayout>
</LinearLayout>
