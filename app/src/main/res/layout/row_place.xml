<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <RelativeLayout
            android:id="@+id/ly_Row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">


            <android.support.v7.widget.AppCompatImageView
                android:layout_marginRight="5dp"
                android:id="@+id/ivThumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_image_black_100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivThumbnail"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Name"
                    style="@style/TextViewLarge"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_none"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:visibility="invisible"
                    tools:text="신림 할리스커피" />

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/TextViewMedium"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_none"
                    android:gravity="left|center"
                    android:textColor="@color/color_gray"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    tools:text="서울시 관악구 신림동 서울시 관악구 신림동 서울시 관악구 신림동 서울시 관악구 신림동 서울시 관악구 신림동" />

                <TextView
                    android:layout_margin="0dp"
                    android:id="@+id/tvLatLng"
                    style="@style/TextViewSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_none"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:textColor="@color/color_gray"
                    android:visibility="invisible"
                    tools:text="위도 : 26.292918, 경도 : 152.291919" />

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
