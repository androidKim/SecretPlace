<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".ui.act.ActCouple">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ly_Top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ToolBarStyle.Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ly_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:onClick="goChatActivity"
                android:padding="@dimen/padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/outline_chat_white_24dp" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ly_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_Top">

            <LinearLayout
                android:id="@+id/ly_RequestStatusNot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextViewMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/str_msg_35" />

                <EditText
                    android:id="@+id/edit_UserKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/edit_margin"
                    android:hint="@string/str_msg_36"
                    android:paddingTop="@dimen/edit_padding"
                    android:paddingBottom="@dimen/edit_padding"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/ly_Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="coupleRequestProc"
                    android:padding="@dimen/layout_padding">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_Icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_outline_add_box_24px" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/TextViewMedium"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_toRightOf="@+id/iv_Icon"
                        android:text="@string/str_msg_39" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_RequestStatusOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_RequestStatusNot"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/TextViewMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_msg_50"
                        tools:text="@string/str_msg_50" />

                    <TextView
                        android:id="@+id/tv_CurrentRequestUser"
                        style="@style/TextViewMedium"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/textView1"
                        tools:text="SJaksksiw939" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_ReqCancel"
                    style="@style/default_button"
                    android:layout_marginTop="8dp"
                    android:onClick="cancelProc"
                    android:text="@string/str_cancel"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/tv_CurrentRequestUser"
                    />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_Container"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_RequestForMe"
                style="@style/default_button"
                android:layout_weight="1"
                android:onClick="showRequestForMe"
                android:text="@string/str_msg_38" />
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>