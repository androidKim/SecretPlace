<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="50dp"
    android:background="@color/color_white"
    android:gravity="center"
    tools:context=".ui.act.ActLogin">

    <RelativeLayout
        android:id="@+id/ly_TermsAgree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_CheckBox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/outline_check_box_outline_blank_black_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_CheckBox"
            android:text="@string/str_msg_20"
            android:textColor="@color/color_black"
            android:textSize="15dp"
            tools:text="개인정보 취급방침" />
    </RelativeLayout>

</LinearLayout>
